<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Button Styles -->
    <style name="cornered_button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.None</item>
    </style>

    <style name="sign_in_up_button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Small</item>
    </style>

    <!-- ImageView Styles -->
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="bottomLeftRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">50dp</item>
    </style>

    <style name="circularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <!-- Bottom Navigation View Styles -->
    <style name="activeIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <!-- Custom AlertDialog style -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_bg</item>
        <item name="android:textColorPrimary">@color/text_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nunito_sans_semibold</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogDefaultButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogDefaultButtonStyle</item>

    </style>

    <style name="AlertDialogDefaultButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>