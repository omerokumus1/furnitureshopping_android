<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/category_bg"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/category_item_bg_pressed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/category_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@id/category_bg"
        app:layout_constraintEnd_toEndOf="@id/category_bg"
        app:layout_constraintStart_toStartOf="@id/category_bg"
        app:layout_constraintTop_toTopOf="@id/category_bg" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textColor="@color/primary"
        android:text="Popular"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/category_bg"
        app:layout_constraintStart_toStartOf="@id/category_bg"
        app:layout_constraintTop_toBottomOf="@id/category_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>